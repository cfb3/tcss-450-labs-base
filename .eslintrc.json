{
    "root": true,
    "env": {
        "node": true,
        "es2021": true
    },
    "extends": ["eslint:recommended", "eslint-config-prettier"],
    "plugins": [
        "eslint-plugin-prettier"
      ],
    "overrides": [],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {    
        "prettier/prettier": [
            "warn",
            {
            "bracketSpacing": true,
            "printWidth": 140,
            "singleQuote": true,
            "trailingComma": "none",
            "tabWidth": 2,
            "useTabs": false,
            "endOfLine": "auto"
            }
        ]}
}
